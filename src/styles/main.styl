//Image ========================================
.img
    width 100px
    height 140px

.img2
    width 140px
    height 220px
    
#first
    background url(../images/teamwork.jpg)
    background-size 100%
    

//List =======================================
ul
    color black
.leftlist li
    text-align left
    list-style url
    
// Bespoke =====================================
.bespoke-before
    transform translateY(-330px) translateZ(-240px) rotateX(90deg) 
    
.bespoke-after
    transform translateY(330px) translateZ(-240px) rotateX(-90deg)

// Font =======================================
.pd
    position absolute
    padding-top 50px
    color #B00
    
.tebal
    font-weight bold
    
// Table ====================================
table, th, td
    border 2px solid black
    border-collapse collapse
th
    width 20%
td
    width 33%
    height 30px
    
// Div ======================================
.bbb
    background-color black
    color white
.ddd
    background-color red
.iii
    background-color yellow
.sss
    background-color lightgreen
.ccc
    background-color lightblue
    
.divkep
    color black
    padding 10px 30px
    border-radius 20px
    margin-bottom 20px
.divkep h1
    margin-bottom 0px
    
#tp
    width 80%
    height 75%
#tp h3, .blake, #tp a
    color black
.divkep a
    color black
    
.kp
    height 30%
    width 47%
    float left
    margin 5px
    border-radius 10px
    height 46%
    padding-top 12%
    